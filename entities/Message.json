{
  "name": "Message",
  "type": "object",
  "properties": {
    "listing_id": {
      "type": "string",
      "description": "ID of the listing being discussed"
    },
    "sender_email": {
      "type": "string",
      "description": "Email of the message sender"
    },
    "sender_name": {
      "type": "string",
      "description": "Name of the sender"
    },
    "receiver_email": {
      "type": "string",
      "description": "Email of the message receiver"
    },
    "receiver_name": {
      "type": "string",
      "description": "Name of the receiver"
    },
    "content": {
      "type": "string",
      "description": "Message content"
    },
    "read": {
      "type": "boolean",
      "default": false,
      "description": "Whether the message has been read"
    }
  },
  "required": ["listing_id", "sender_email", "content"]
}


