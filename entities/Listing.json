{
  "name": "Listing",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Item title"
    },
    "description": {
      "type": "string",
      "description": "Detailed description of the item"
    },
    "price": {
      "type": "number",
      "description": "Price in dollars"
    },
    "category": {
      "type": "string",
      "enum": [
        "textbooks",
        "electronics",
        "furniture",
        "clothing",
        "tickets",
        "sports",
        "kitchen",
        "decor",
        "other"
      ],
      "description": "Item category"
    },
    "condition": {
      "type": "string",
      "enum": ["new", "like_new", "good", "fair", "poor"],
      "description": "Item condition"
    },
    "campus": {
      "type": "string",
      "enum": ["abbotsford", "chilliwack"],
      "description": "UFV Campus location"
    },
    "images": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Array of image URLs"
    },
    "seller_name": {
      "type": "string",
      "description": "Seller's display name"
    },
    "seller_email": {
      "type": "string",
      "description": "Seller's contact email"
    },
    "status": {
      "type": "string",
      "enum": ["active", "sold", "removed"],
      "default": "active",
      "description": "Listing status"
    },
    "location": {
      "type": "string",
      "description": "Specific location for pickup (building, area, etc.)"
    }
  },
  "required": ["title", "price", "category", "campus"]
}


